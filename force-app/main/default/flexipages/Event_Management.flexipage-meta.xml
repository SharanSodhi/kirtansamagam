<?xml version="1.0" encoding="UTF-8"?>
<FlexiPage xmlns="http://soap.sforce.com/2006/04/metadata">
    <flexiPageRegions>
        <name>header</name>
        <type>Region</type>
        <componentInstances>
            <componentName>eventSubmissionForm</componentName>
            <componentInstanceProperties>
                <name>showTitle</name>
                <value>true</value>
            </componentInstanceProperties>
        </componentInstances>
    </flexiPageRegions>
    
    <flexiPageRegions>
        <name>main</name>
        <type>Region</type>
        <componentInstances>
            <componentName>eventList</componentName>
        </componentInstances>
    </flexiPageRegions>
    
    <flexiPageRegions>
        <name>sidebar</name>
        <type>Region</type>
        <componentInstances>
            <componentName>eventApprovalList</componentName>
            <componentInstanceProperties>
                <name>showHelp</name>
                <value>true</value>
            </componentInstanceProperties>
            <visibilityRule>
                <criteria>
                    <leftValue>{!$Permission.CustomPermission.Manage_Events}</leftValue>
                    <operator>EQUAL</operator>
                    <rightValue>true</rightValue>
                </criteria>
            </visibilityRule>
        </componentInstances>
    </flexiPageRegions>
    
    <masterLabel>Event Management</masterLabel>
    <template>
        <name>flexipage:appHomeTemplateHeaderSidebarRight</name>
    </template>
    <type>AppPage</type>
</FlexiPage>
