<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Event Submission Form</masterLabel>
    <description>Form for submitting new Sikh community events</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="showTitle" type="Boolean" default="true" label="Show Form Title"/>
            <property name="titleText" type="String" default="Submit New Event" label="Form Title Text"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
